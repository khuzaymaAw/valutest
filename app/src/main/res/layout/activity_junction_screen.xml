<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".junction_screen">

    <ImageView
        android:id="@+id/take_a_tour_button"
        android:layout_width="186.7dp"
        android:layout_height="58dp"
        android:contentDescription="@string/take_a_tour_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.409"
        app:srcCompat="@drawable/take_a_tour" />

    <ImageView
        android:id="@+id/start_button"
        android:layout_width="186.7dp"
        android:layout_height="58dp"
        android:contentDescription="@string/start_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/take_a_tour_button"
        app:layout_constraintVertical_bias="0.131"
        app:srcCompat="@drawable/start" />
</androidx.constraintlayout.widget.ConstraintLayout>